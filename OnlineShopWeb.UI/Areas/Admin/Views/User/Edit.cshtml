@model OnlineShopWeb.Data.EF.User

@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Cập nhật người dùng
}
@using (Html.BeginForm("Edit", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
  
    <div class="form-group">
        <div class="row">
            <div class="col-md-1">
               
                @Html.LabelFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="col-md-10">
                @Html.TextBoxFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>      

    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-md-1">
                <label style="width:130px" for="Password">Password : </label>
            </div>

            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })            
            </div>

        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-1">
                <label style="width:130px" for="Name">Name : </label>
            </div>

            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })              
            </div>

        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-1">
                <label for="Phone">Phone : </label>
            </div>

            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })           
            </div>

        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-1">
                <label style="width:130px" for="Email">Email : </label>
            </div>

            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })               
            </div>

        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-1">
                <label style="width:130px" for="Address">Address : </label>
            </div>

            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })               
            </div>
        </div>


    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-1">
                <label style="width:130px" for="Status">Status : </label>
            </div>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.Status)                    
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="form-floating mb-3" style="padding: 2px;">
            <button type="submit" class="btn btn-lg btn-primary">Cập nhật</button>
        </div>     
    </div>
</div>
}
@model PagedList.IPagedList<OnlineShopWeb.Data.EF.User>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}
@section header{
    Danh sách người dùng
}
@section jsFooter{
    <script src="~/Assets/Admin/js/Controller/UserController.js"></script>
    }
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="row">
                <div class="col-md-6 text-center ">
                    @using (Html.BeginForm("Index", "User", FormMethod.Get))
                    {
                        <div class="input-group input-group-sm" style="width: 350px;padding: 5px;">
                            <input type="text" name="searchstring" class="form-control  border-0 small" placeholder="Search for..."
                                   aria-label="Search" aria-describedby="basic-addon2" style="color:black">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-md-6 text-right">
                    <a href="@Url.Action("Create", "User")" class="btn btn-sm btn-success"><i class="fas fa-light fa-plus"></i>Thêm</a>

                </div>
            </div>

        </div>
        <div class="card-body">
            <div class="row">
                @if (ViewBag.SuccessMsg != null)
                {
                    <div id="msgAlert" class="alert alert-success" role="alert">
                        @ViewBag.SuccessMsg
                    </div>
                }
            </div>
            <div class="table-responsive">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>UserName</th>
                                    <th>Name</th>
                                    <th>Phone</th>
                                    <th>Email</th>
                                    <th>Address</th>
                                    <th>Status</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var a in Model)
                                {
                                    <tr id="row_@a.UserID">

                                        <td>@a.UserName</td>
                                        <td>@a.Name</td>
                                        <td>@a.Phone</td>
                                        <td>@a.Email</td>
                                        <td>@a.Address</td>
                                        <td> <a href="#" class="btn_active_Status" data-id="@a.UserID"> @(a.Status ? "Actived" : "Unactived")</a></td>
                                        @*<td><a href="#" class="btn-active" data-id="@a.UserID">@Html.Raw(item.Status ? "<strong>Kích hoạt</strong>" : "Khoá")</a></td>*@
                                        @*<td>@a.Status</td>*@
                                        <td>
                                            <a href="/Admin/User/Edit/@a.UserID">Edit</a>                                        |

                                            @Ajax.ActionLink("Delete", "Delete", new { @id = a.UserID }, new AjaxOptions
                                            {
                                                Confirm = "Bạn có muốn xoá bản ghi này?",
                                                OnComplete = "$('#row_" + @a.UserID + "').remove()",
                                                HttpMethod = "Delete"
                                            })

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
    </div>


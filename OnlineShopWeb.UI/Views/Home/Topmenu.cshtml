@model List<OnlineShopWeb.Data.EF.Menu>
<div class="call">
    <p><span>Cần hỗ trợ?</span> Liên hệ <span class="number">(+84) 977-014-903</span></span></p>
</div>
<div class="account_desc">
    @{
        var _sessions = (OnlineShopWeb.UI.Common.UserLogin)Session[OnlineShopWeb.UI.Common.Constant.User_Login];
    }
    @if (_sessions == null)
    {
        <ul>
            @foreach (var item in Model)
            {
                <li><a href="@item.Link" target="@item.Target">@item.Text</a></li>
            }
        </ul>
    }
    else
    {
        <ul>           
                <li> Xin chào: @_sessions.UserName</li>
                <li> @Html.ActionLink("Đăng xuất","ClientLogout", "UserClient")</li>
        </ul>
    }

</div>
<div class="clear"></div>

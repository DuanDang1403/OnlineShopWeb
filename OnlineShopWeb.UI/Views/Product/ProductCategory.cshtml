@model  List<OnlineShopWeb.Data.EF.ProductCategory>
@*@{
    var _product = (List<OnlineShopWeb.Data.EF.Product>)ViewBag.product;
}*@
<div class="categories">
    <ul>
        <h3>Danh mục sản phẩm</h3>
        @foreach (var item in Model)
        {
            var child = Model.Where(x => x.ParentID == item.ProductCategoryID);            
            var parentClass = child.Count() > 0 ? "class=dropdown - toggle data-toggle=dropdown" : "";
            <li class="dropdown">
                <a href="/san-pham/@item.MetaTitle-@item.ProductCategoryID" @parentClass>@item.ProductCategoryName</a>
                @if (child.Count() > 0)
                {
                    <ul class="dropdown-menu">
                        @foreach (var _childitem in child)
                        {
                            <li>
                                <a href="/san-pham/@_childitem.MetaTitle-@_childitem.ProductCategoryID">
                                    @_childitem.ProductCategoryName
                                </a>
                            </li>
                        }

                    </ul>
                }
            </li>


        }

    </ul>
</div>

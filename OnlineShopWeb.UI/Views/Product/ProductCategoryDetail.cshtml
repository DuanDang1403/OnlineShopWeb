
@model List<OnlineShopWeb.Data.EF.Product>
@{
    var _category = (OnlineShopWeb.Data.EF.ProductCategory)ViewBag.category;
    ViewBag.Title = "Chi tiết danh mục sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="header_slide">
    <div class="header_bottom_left">
        @{Html.RenderAction("ProductCategory", "Product");}
    </div>
    <div class="header_bottom_right">
        <div class="content">
            <div class="content_top">
                <div class="heading">
                    <h3>@_category.ProductCategoryName</h3>
                </div>
                <div class="see">
                    <p><a href="/san-pham">Xem tất cả</a></p>
                </div>
                <div class="clear"></div>
            </div>
            <div class="section group">
                @foreach (var item in Model)
                {
                    var url = "/chi-tiet/" + item.MetaTitle + "-" + item.ProductID;
                    //var _link = "/gio-hang/" + item.MetaTitle + "-" + item.ProductID;
                    <div class="grid_1_of_4 images_1_of_4">
                        <a href="@url"><img src="@item.Image" alt="" /></a>
                        <h2>@item.ProductName</h2>
                        <div class="price-details">
                            <div class="price-number">
                                <p><span class="rupees">@(item.Price.HasValue ? item.Price.Value.ToString("N0") : "Liên hệ")</span></p>
                            </div>
                            <div class="add-cart">
                                <h4><a href="/them-gio-hang/@item.ProductID">Thêm vào giỏ</a></h4>
                            </div>
                            <div class="clear"></div>
                        </div>

                    </div>
                }
                <div class="clear"></div>
                <!--Phân trang-->
                @if (ViewBag.TotalPage > 0)
                {
                    var pageDisplay = (int)ViewBag.MaxPage;
                    var totalPage = (int)ViewBag.TotalPage;
                    var currentPage = (int)ViewBag.Page;

                    var startPage = Math.Max(1, currentPage - pageDisplay / 2);
                    var endPage = Math.Min(totalPage, currentPage + pageDisplay / 2);
                    var link = "/san-pham/" + _category.MetaTitle + "-" + _category.ProductCategoryID;
                    <nav>
                        <ul class="pagination">
                            @if (currentPage > ViewBag.First)
                            {
                                <li><a href="@link?page=@ViewBag.First" title="Trang đầu" class="first"><i class="fa fa-angle-double-left"></i></a></li>
                                <li>
                                    <a href="@link?page=@ViewBag.Prev" title="Trang trước" class="prev"><i class="fa fa-angle-left"></i></a>
                                </li>

                            }
                            @for (int i = startPage; i <= endPage; i++)
                            {
                                if (currentPage == i)
                                {

                                    <li> <a href="@link?page=@i" class="active" title="Trang @i">@i</a></li>
                                }
                                else
                                {
                                    <li><a href="@link?page=@i" title="Trang @i" class="pos">@i</a></li>
                                }
                            }
                            @if (currentPage < totalPage)
                            {
                                <li><a href="@link?page=@ViewBag.Next" class="next" title="Trang sau"><i class="fa fa-angle-right"></i></a></li>
                                <li> <a href="@link?page=@ViewBag.Last" class="last" title="Trang cuối"><i class="fa fa-angle-double-right"></i></a></li>
                            }

                        </ul>
                    </nav>
                }
                else
                {
                    <span>Không có sản phẩm nào</span>
                }
            </div>
        </div>

    </div>
    <div class="clear"></div>
</div>
